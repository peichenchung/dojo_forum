<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><%= link_to 'Category List' %></li>
      <li role="presentation"><%= link_to 'User List' %></li>
    </ul>

    <br>

    <div class="col-md-12">

      <div class="form-inline">
        <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>

      <br>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Category Name</th>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>Edit | Delete</td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div><!-- col-md-12 -->

  </div>
</div>
