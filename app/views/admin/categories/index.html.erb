<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><%= link_to 'Category List', admin_categories_path %></li>
      <li role="presentation"><%= link_to 'User List', admin_users_path %></li>
    </ul>

    <br>

    <div class="col-md-12">

      <div class="form-inline">
        <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>

      <br>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="col-md-8">Category Name</th>
            <td class="col-md-4"></td>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to 'Edit', admin_categories_path(id: category.id) %>&emsp;
              <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div><!-- col-md-12 -->

  </div>
</div>