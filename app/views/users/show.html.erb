<div class="container">
  <div class="row">
    <div class="col-md-12">

<!----------------------------------------- 使用者基本info ----------------------------------------->

      <div class="page-header">
        <div class="col-md-3 col-sm-4">
          <div class="text-center">
            <%= image_tag @user.avatar.url, class: "img-responsive img-rounded" if @user.avatar? %>
          </div>
        </div>

        <div class="col-md-9 col-sm-8">
          <h2><%= @user.name %></h2>
          <p><%= @user.email %></p>
          <div><%= simple_format @user.intro %></div>
        </div>

        <br>

        <% if @user.email == current_user.email %>
          <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
        <% end %>
        <div class="clearfix"></div>
      </div><!-- page-header -->

  <!----------------------------------------- 下方區塊 ----------------------------------------->

      <ul class="nav nav-tabs">
        <li role="presentation" class="active col-md-2""><%= link_to 'My Post' %></li>
        <li role="presentation" class="col-md-2"><%= link_to 'My Comment' %></li>
        <li role="presentation" class="col-md-2"><%= link_to 'My Collect' %></li>
        <li role="presentation" class="col-md-2"><%= link_to 'My Draft' %></li>
        <li role="presentation" class="col-md-2"><%= link_to 'My Friend' %></li>
      </ul>

      <div class="col-md-10">
        <div class="my-post">
          <table class="table table-striped">
            <% @user.articles.each do |article| %>
                <% if article.status == "publish" %>
                <tr>
                  <td class="col-md-2"><%= truncate(article.title, length: 12) %></td>
                  <td class="col-md-2">Published</td>
                  <td class="col-md-2"><%= time_tag(article.updated_at) %></td>
                  <td class="col-md-2">
                    <% if current_user.id == article.user_id %>
                      <%= link_to 'Edit', edit_article_path(article) %>&emsp;
                      <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %>
                    <% end %>
                  </td>
                  <td class="col-md-2"></td>
                </tr>
              <% end %>
            <% end %>
          </table>
        </div>
      </div>





    </div><!-- col-md-12 -->
  </div>
</div>