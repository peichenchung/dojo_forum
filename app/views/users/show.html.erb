<div class="container">
  <div class="row">
    <h2><%= @user.name %></h2>
    <p><%= @user.email %></p>
    <div><%= simple_format @user.intro %></div>
    <%= image_tag @user.avatar.url, class: "img-responsive img-rounded" if @user.avatar? %>

    <% if @user.email == current_user.email %>
      <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>