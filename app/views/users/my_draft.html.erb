<div class="container">
  <div class="row">
    <div class="col-md-12">

<!----------------------------------------- 使用者基本info ----------------------------------------->
      <%= render partial: "profile" %>
<!-------------------------------------------- 下方區塊 -------------------------------------------->

      <ul class="nav nav-tabs">
        <li role="presentation" class="col-md-2""><%= link_to 'My Post', user_path(@user) %></li>
        <li role="presentation" class="col-md-2"><%= link_to 'My Comment', my_comment_user_path(@user) %></li>
        <li role="presentation" class="col-md-2"><%= link_to 'My Collect' %></li>
        <li role="presentation" class="active col-md-2"><%= link_to 'My Draft', my_draft_user_path(@user) %></li>
        <li role="presentation" class="col-md-2"><%= link_to 'My Friend' %></li>
      </ul>

      <div class="col-md-10">
        <div class="my-draft">
          <table class="table table-striped">
            <% @user.articles.each do |article| %>
                <% if article.status == "draft" %>
                <tr>
                  <td class="col-md-2">
                    <%= link_to article_path(article) do %>
                      <%= truncate(article.title, length: 12) %>
                    <% end %>
                  </td>
                  <td class="col-md-2">Published</td>
                  <td class="col-md-2"><%= time_tag(article.updated_at) %></td>
                  <td class="col-md-2">
                    <% if current_user.id == article.user_id %>
                      <%= link_to 'Edit', edit_article_path(article) %>&emsp;
                      <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %>
                    <% end %>
                  </td>
                  <td class="col-md-2"></td>
                </tr>
              <% end %>
            <% end %>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>