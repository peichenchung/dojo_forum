<div class="container">
  <div class="row">

    <%= form_for [@article, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Submit', class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to '取消編輯', :back %>

  </div>
</div>